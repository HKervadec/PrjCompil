PROGRAMME ex2

BOOLEEN FONCTION  trace (ENTIER x,ENTIER y)
CONST blanc=0,
      croix=1;
 
      SI x<>y ALORS SI y=25-x ALORS ECRIRE(blanc)
                    SINON ECRIRE(croix)
                    FSI
      SINON ECRIRE(blanc)
      FSI;
      SI x=24 ALORS  ALALIGNE FSI;
 RETOURNE VRAI
 FFONCTION

PRINCIPAL
VAR ENTIER i,j;
VAR BOOLEEN b;
   i=0;j=0;
   TANTQUE j+1<>25 FAIRE
      ECRIRE("                            ");
      TANTQUE i+1<>25 FAIRE
        b= trace(i+1,j+1);
         i=i+1
      FAIT;
      j=j+1;
      i=0
      
   FAIT  
FPRINCIPAL
FPROGRAMME
